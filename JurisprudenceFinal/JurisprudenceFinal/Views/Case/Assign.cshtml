@model JurisprudenceFinal.Models.CaseModelClass

@{
    Layout = null;
}
<!DOCTYPE html>

<html>

<head>
    <title>Assign Lawyer</title>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link href="~/css/materialize.min.css" rel="stylesheet" />
    <style>
        body {
            display: flex;
            min-height: 100vh;
            flex-direction: column;
        }

        main {
            flex: 1 0 auto;
        }

        body {
            background: #fff;
        }

        .input-field input[type=date]:focus + label,
        .input-field input[type=text]:focus + label,
        .input-field input[type=email]:focus + label,
        .input-field input[type=password]:focus + label {
            color: #e91e63;
        }

        .input-field input[type=date]:focus,
        .input-field input[type=text]:focus,
        .input-field input[type=email]:focus,
        .input-field input[type=password]:focus {
            border-bottom: 2px solid #e91e63;
            box-shadow: none;
        }
    </style>
</head>

<body>
    <div class="section"></div>
    <main>
    <center>
        <div class="indigo-text">
            <h3>Assign Case</h3>
        </div>

      <div class="container">
        <div class="card-panel ">
             <form class="col s12" id="form1" method="post">
                 <div class="row">
                     <div class="col s6">
                          <table>
                    <tr>
                        <td><span>Name</span></td>
                        <td>
                            @Html.HiddenFor(model => model.CaseID)
                            @Html.TextBoxFor(model => model.CaseName,new { style="disabled:true"})
                    </tr>
                    <tr>
                        <td><span>Case Type</span></td>
                        <td>
                             @Html.TextBoxFor(model => model.CaseType,new { style="disabled:true"})
                        </td>
                    </tr>
                    <tr>
                        <td><span>Details</span></td>
                        <td>
                             @Html.TextBoxFor(model => model.CaseDetails,new { style="disabled:true"})
                        </td>
                    </tr>
                               <tr>
                        <td><span>SelectLawyer</span></td>
                        <td>
                              @Html.DropDownListFor(model => model.Lawyer, new SelectList(ViewBag.Lawyers, "LawyerID","Name"), new { @class = "browser-default",name="lawyer" })
                        </td>
                    </tr>
                </table>
                     </div>
                     <div class="col s6">
                      </div>

                            <div>
                                <div style="color:red">
                                      @ViewBag.Message
                                </div>
                              
                                <button type='submit' name='btn_login' class='btn btn-large  waves-effect indigo'>Assign</button>

                            @Html.ActionLink("Cancel", "AssignCase", "Case","", new { @class = "waves-effect waves-light btn btn-large   red " })
                              </div>

                     <div>
                                    </div>
                     </div>
          </form>
        </div>
      </div>
    </center>
  </main>
    <script src="~/Scripts/jquery-3.1.1.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/js/materialize.min.js"></script>
    <script>
      
        jQuery('.numbersOnly').keyup(function () {
            this.value = this.value.replace(/[^0-9]/g, '');
        });
    </script>
</body>
</html>
