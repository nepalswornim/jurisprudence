@{
    Layout = null;
}

<!DOCTYPE html>

<html>

<head>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link href="~/css/materialize.min.css" rel="stylesheet" />
    <style>
        body {
            display: flex;
            min-height: 100vh;
            flex-direction: column;
        }

        main {
            flex: 1 0 auto;
        }

        body {
            background: #fff;
        }

        .input-field input[type=date]:focus + label,
        .input-field input[type=text]:focus + label,
        .input-field input[type=email]:focus + label,
        .input-field input[type=password]:focus + label {
            color: #e91e63;
        }

        .input-field input[type=date]:focus,
        .input-field input[type=text]:focus,
        .input-field input[type=email]:focus,
        .input-field input[type=password]:focus {
            border-bottom: 2px solid #e91e63;
            box-shadow: none;
        }
    </style>
    <title>Add Case</title>
</head>

<body>
    <div class="section"></div>
    <main>
    <center>
        <div class="indigo-text">
            <h3>Add a Case</h3>
        </div>

      <div class="container">
        <div class="card-panel ">
             <form class="col s12" id="form1" method="post">
                 <div class="row">
                     <div class="col s6">
                          <table>
                    <tr>
                        <td><span>Case Name</span></td>
                        <td>
                            <input class='validate' type='text' name='casename' id='txtcasename' /></td>
                    </tr>
                    <tr>
                         <tr>
                        <td><span>Case Type</span></td>
                        <td>
                            <input class='validate' type='text' name='casetype' id='txtcasetype' /></td>
                    </tr>
                 
                </table>
                     </div>
                     <div class="col s6">
                         <table> 
                              
                             <tr>
                        <td>Case Details</td>
                        <td>
                            <textarea  class="materialize-textarea" name="casedetails"></textarea>
                           </td>
                    </tr>
                
                 
                             </table></div>

                            <div>
                                @ViewBag.Message
                                <button type='submit' name='btn_login' class='btn btn-large  waves-effect indigo'>Add Case</button>

                            @Html.ActionLink("Cancel", "Cases", "Case", new { @class = "waves-effect waves-light btn btn-large   red " })
                              </div>

                     <div>
                                    </div>
                     </div>
          </form>
        </div>
      </div>
    </center>
  </main>
    <script src="~/Scripts/jquery-3.1.1.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/js/materialize.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#form1").validate({
                rules: {
                    casename: {
                        required: true,
                        rangelength: [5, 50]
                    },
                    casetype: {
                        required: true
                    },
                    casedetails: {
                        required: true,
                        rangelength: [20, 1000]
                    }

                },
                messages: {
                    casename: {
                        required: 'Please Enter a Case Name',
                        rangelength:'Case name must be between 5 and 50 characters'
                    },
                    casetype: {

                        required: 'Please Enter a Case Type'
                        

                    },
                    casedetails: {

                        required: 'Please Enter the Case Details',
                        rangelength: 'Case details must be between 20 and 1000 characters'

                    }

                }
            })
        })
        jQuery('.numbersOnly').keyup(function () {
            this.value = this.value.replace(/[^0-9]/g, '');
        });
    </script>
</body>
</html>
